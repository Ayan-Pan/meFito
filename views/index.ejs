<% include ./partials/header %>
<style>
    body,
    html {
        width: 100%;
        height: auto;
    }
    
    .centered {
        width: 50%;
        position: absolute;
        font-size: 60px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(0, 0, 0, 0.5);
        text-align: center;
        border-radius: 30px;
    }
</style>

<div id="carouselExampleFade" class="carousel slide carousel-fade bannerImg" data-ride="carousel">
    <div class="carousel-inner">
        <% for(var i=0; i<=2; i++){ %>
        <% if(i == 0) {%>
        <div class="carousel-item active">
            <img src=<%=bannerImg[i] %> class="img-fluid" alt="Responsive image">
            <div class="centered text-white">Welcome To meFito</div>
        </div>
        <% } else { %>
        <div class="carousel-item">
            <img src=<%=bannerImg[i] %> class="img-fluid" alt="Responsive image">
        </div>
        <% } %>
        <% } %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container mt-2 mb-2 p-3">
    <h3 class="text-primary" align="center">
        <%= bodyTitle[0] %>
    </h3>

    <div class="card-deck mt-4">
        <% missionCards.forEach((element)=>{ %>
        <div class="card">
            <h5 class="card-title" align="center">
                <%= element.title %>
            </h5>
            <div class="card-body">
                <img src="<%= element.icon %>"
                    style="width: 150px; display: block; margin-left: auto; margin-right: auto;"
                    class="card-img-top" alt="...">
                <p class="card-text">
                    <%= element.text %>
                </p>
            </div>
        </div>
        <% })%>
    </div>
</div>


<% include ./partials/footer %>